{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ai-terminal",
  "version": "1.0.6",
  "identifier": "com.ai-terminal.dev",
  "build": {
    "beforeDevCommand": "npm run start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist/ai-terminal/browser"
  },
  "app": {
    "windows": [
      {
        "title": "AI Terminal",
        "width": 1024,
        "height": 768,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "fullscreen": false,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app", "deb"],
    "publisher": "AI Terminal Foundation",
    "copyright": "Â© 2025 AI Terminal Foundation",
    "category": "DeveloperTool",
    "shortDescription": "AI-powered terminal assistant",
    "longDescription": "AI-powered terminal assistant with natural language support",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null,
      "providerShortName": null
    }
  }
}
